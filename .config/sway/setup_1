### autostart

###### Xwayland Support ######
xwayland disable

### input
input type:touchpad {
	accel_profile adaptive
	drag disabled
	# drag_lock enabled
	dwt enabled
	natural_scroll enabled
	pointer_accel 0.3
	scroll_factor 0.5
	scroll_method two_finger
	tap enabled
	middle_emulation disabled
}

input type:pointer {
	accel_profile adaptive
	drag enabled
	drag_lock enabled
	natural_scroll disabled
	pointer_accel -0.7
	scroll_factor 1.5
}

input type:keyboard {
    xkb_layout "us,es"
    xkb_options "grp:win_space_toggle"
	xkb_model "dell"
}

### output
output eDP-1 mode 3456x2160 position 0,0 scale 2
output 'Goldstar Company Ltd LG HDR 4K 0x000062D5' mode 3840x2160 position 1728,0 scale 1.5

# laptop lid
set $laptop eDP-1
bindswitch --reload --locked lid:on output $laptop disable
bindswitch --reload --locked lid:off output $laptop enable

### idle
exec swayidle -w \
    timeout 300 "alacritty -t Screensaver -e zsh -c 'sleep .1 && cmatrix' &" \
    timeout 600 'swaylock -f -c 000000B3' \
    timeout 900 'systemctl suspend'
