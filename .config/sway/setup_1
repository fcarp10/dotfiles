### autostart
# exec syncthing &
exec easyeffects --gapplication-service
exec fusuma &

###### Xwayland Support ######
# xwayland disable

### input
input type:touchpad {
	accel_profile adaptive
	drag disabled
	# drag_lock enabled
	dwt enabled
	natural_scroll enabled
	pointer_accel 0.3
	scroll_factor 0.5
	scroll_method two_finger
	tap enabled
	middle_emulation disabled
}

input type:pointer {
	accel_profile adaptive
	drag enabled
	drag_lock enabled
	natural_scroll disabled
	pointer_accel -0.7
	scroll_factor 1.5
}

input type:keyboard {
    xkb_layout "us,es"
    xkb_options "grp:alt_shift_toggle"
	xkb_model "dell"
}

### output
output eDP-1 mode 3456x2160 position 0,0 scale 2
output "Goldstar Company Ltd LG HDR 4K 0x000062D5" mode 3840x2160 position 1728,0 scale 1.5


# laptop lid
set $laptop eDP-1
bindswitch --reload --locked lid:on output $laptop disable
bindswitch --reload --locked lid:off output $laptop enable

### idle
exec swayidle -w \
    timeout 300 "alacritty -t Screensaver -e zsh -c 'sleep .1 && cmatrix -s' &" \
    timeout 600 'swaylock -f -c 00000000' \
    timeout 900 'systemctl suspend'

### specific binding
bindsym $mod+ctrl+0 exec swaymsg output eDP-1 disable
bindsym $mod+ctrl+Shift+0 exec swaymsg output eDP-1 enable
bindsym $mod+alt+0 exec swaymsg output '"Goldstar Company Ltd LG HDR 4K 0x000062D5"' scale 1
bindsym $mod+ctrl+alt+0 exec swaymsg output '"Goldstar Company Ltd LG HDR 4K 0x000062D5"' scale 1.5
