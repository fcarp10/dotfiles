{
    "editor.minimap.enabled": false,
    "editor.semanticHighlighting.enabled": true,
    "editor.mouseWheelZoom": true,
    "editor.fontFamily": "'JetBrainsMono Nerd Font', 'RobotoMono Nerd Font', monospace",
    "editor.renderControlCharacters": true,
    "editor.smoothScrolling": true,
    "editor.fastScrollSensitivity": 10,
    "editor.suggestSelection": "first",
    "workbench.editor.enablePreview": false,
    "workbench.colorTheme": "One Monokai",
    "workbench.iconTheme": "eq-material-theme-icons",
    "workbench.productIconTheme": "material-product-icons",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.colorCustomizations": {
        "sideBar.background": "#000000",
        "sideBar.foreground": "#FFFFFF",
        "editor.background": "#000000",
        "editor.foreground": "#FFFFFF",
        "activityBar.background": "#000000",
        "tab.activeBackground": "#000000",
        "tab.activeBorderTop": "#000000",
        "terminal.background": "#000000",
        "terminal.foreground": "#FFFFFF",
        "terminalCursor.background": "#000000",
        "terminalCursor.foreground": "#FFFFFF",
        "terminal.ansiBlack": "#000000",
        "terminal.ansiBlue": "#FC9867",
        "terminal.ansiCyan": "#78DCE8",
        "terminal.ansiGreen": "#A9DC76",
        "terminal.ansiMagenta": "#AB9DF2",
        "terminal.ansiRed": "#FF6188",
        "terminal.ansiWhite": "#FCFCFA",
        "terminal.ansiYellow": "#FFD866",
        "terminal.ansiBrightBlack": "#727072",
        "terminal.ansiBrightBlue": "#FC9867",
        "terminal.ansiBrightCyan": "#78DCE8",
        "terminal.ansiBrightGreen": "#A9DC76",
        "terminal.ansiBrightMagenta": "#AB9DF2",
        "terminal.ansiBrightRed": "#FF6188",
        "terminal.ansiBrightWhite": "#FCFCFA",
        "terminal.ansiBrightYellow": "#FFD866",
    },
    "window.openFilesInNewWindow": "off",
    "window.openFoldersInNewWindow": "on",
    "diffEditor.ignoreTrimWhitespace": false,
    "terminal.integrated.fontFamily": "RobotoMono Nerd Font",
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "git.enableSmartCommit": true,
    "git.autofetch": true,
    "git.confirmSync": false,
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "python.languageServer": "Jedi",
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.latex.recipe.default": "lastUsed",
    "latex-workshop.view.pdf.color.dark.backgroundColor": "#000000",
    "latex-workshop.latex.autoBuild.run": "onSave",
    "latex-workshop.message.warning.show": false,
    "latex-workshop.message.error.show": false,
    "latex-workshop.synctex.afterBuild.enabled": true,
    // "latex-workshop.latex.outDir": "%DOC_EXT%/../../build/%DOCFILE%",
    "latex-workshop.latex.recipes": [
        {
            "name": "tectonic-compile",
            "tools": ["tectonic-compile"]
        },
        {
            "name": "tectonic-build",
            "tools": ["tectonic-build"]
        },
        {
            "name": "tectonic-compile-biber",
            "tools": ["tectonic-compile-biber", "tectonic-compile"]
        },
        {
            "name": "pdflatex",
            "tools": [
                "pdflatex"
            ]
        },
        {
            "name": "pdflatex ➞ bibtex ➞ pdflatex × 2",
            "tools": [
                "pdflatex",
                "bibtex",
                "pdflatex",
                "pdflatex"
            ]
        },
        {
            "name": "pdflatex ➞ biber ➞ pdflatex × 2",
            "tools": [
                "pdflatex",
                "biber",
                "pdflatex",
                "pdflatex"
            ]
        },
        {
            "name": "pdf_with_embedded_fonts",
            "tools": [
                "gs",
            ]
        },
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "tectonic-compile",
            "command": "tectonic",
            "args": ["-X", "compile", "%DOCFILE_EXT%", "--synctex", "--print", "--keep-intermediates","--keep-logs"],
            "env": {}
        },
        {
            "name": "tectonic-compile-biber",
            "command": "tectonic",
            "args": ["-X", "compile", "%DOCFILE_EXT%", "--keep-intermediates", "--keep-logs"],
            "env": {}
        },
        {
            "name": "tectonic-build",
            "command": "tectonic",
            "args": ["-X", "build", "--print", "--keep-intermediates","--keep-logs"],
            "env": {}
        },
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "gs",
            "command": "gs",
            "args": [
                "-dNOPAUSE",
                "-dBATCH",
                "-sDEVICE=pdfwrite",
                "-dPDFSETTINGS=/prepress",
                "-dEmbedAllFonts=true",
                "-sOutputFile=%DOC%_with_embedded_fonts.pdf",
                "-f",
                "%DOC%.pdf"
            ],
            "env": {}
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": [
                "%DOCFILE%"
            ],
            "env": {}
        },
        {
            "name": "biber",
            "command": "biber",
            "args": [
                "%DOCFILE%"
            ]
        }
    ],
    "[latex]": {
        "editor.fontFamily": "'Roboto', sans-serif",
    },
    "explorer.confirmDragAndDrop": false,
    "latex-workshop.texcount.autorun": "onSave",
    "cSpell.enableFiletypes": [
        "latex"
    ],
    "projectManager.git.baseFolders": [
        "~/repository",
        "~/repository-work"
    ],
    "projectManager.git.maxDepthRecursion": 2,
    "redhat.telemetry.enabled": false,
    "ansible.validation.lint.enabled": false,
    "files.associations": {
        "**/*.yml": "ansible",
    },
    "go.toolsManagement.autoUpdate": true,
    "solidity.telemetry": false,
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[yaml]": {
        "editor.defaultFormatter": "redhat.vscode-yaml"
    },
    "[css]": {
        "editor.defaultFormatter": "vscode.css-language-features"
    },
    "java.edit.smartSemicolonDetection.enabled": true,
    "window.menuBarVisibility": "toggle",
    "window.titleBarStyle": "native",
    "window.customTitleBarVisibility": "never",
}