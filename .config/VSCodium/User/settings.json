{
    "editor.minimap.enabled": false,
    "editor.semanticHighlighting.enabled": true,
    "editor.mouseWheelZoom": true,
    "editor.fontFamily": "'Roboto Mono'",
    "editor.renderControlCharacters": true,
    "editor.smoothScrolling": true,
    "editor.fastScrollSensitivity": 10,
    "editor.suggestSelection": "first",
    "workbench.editor.enablePreview": false,
    "workbench.iconTheme": "eq-material-theme-icons-light",
    "workbench.productIconTheme": "material-product-icons",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.colorCustomizations": {
        "sideBar.background": "#000000",
        "sideBar.foreground": "#FFFFFF",
        "editor.background": "#000000",
        "editor.foreground": "#FFFFFF",  
        "activityBar.background": "#000000", 
        "tab.activeBackground": "#000000",
        "tab.activeBorderTop": "#000000",
    },
    "workbench.colorTheme": "Monokai Vibrant",
    "window.menuBarVisibility": "toggle",
    "window.openFilesInNewWindow": "off",
    "window.openFoldersInNewWindow": "on",
    "diffEditor.ignoreTrimWhitespace": false,
    "terminal.integrated.fontFamily": "MesloLGS NF",
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "git.enableSmartCommit": true,
    "git.autofetch": true,
    "git.confirmSync": false,
    "python.formatting.provider": "black",
    "python.languageServer": "None",
    "python.linting.pylintEnabled": true,
    "[python]": {
        "editor.defaultFormatter": "ms-python.python",
    },
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.latex.recipe.default": "lastUsed",
    "latex-workshop.view.pdf.color.dark.backgroundColor": "#000000",
    "latex-workshop.latex.autoBuild.run": "onSave",
    "latex-workshop.message.warning.show": false,
    "latex-workshop.message.error.show": false,
    "latex-workshop.latex.recipes": [
        {
            "name": "pdflatex",
            "tools": [
                "pdflatex"
            ]
        },
        {
            "name": "pdflatex ➞ bibtex ➞ pdflatex × 2",
            "tools": [
                "pdflatex",
                "bibtex",
                "pdflatex",
                "pdflatex"
            ]
        },
        {
            "name": "pdflatex ➞ biber ➞ pdflatex × 2",
            "tools": [
                "pdflatex",
                "biber",
                "pdflatex",
                "pdflatex"
            ]
        },
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": [
                "%DOCFILE%"
            ],
            "env": {}
        },
        {
            "name": "biber",
            "command": "biber",
            "args": [
                "%DOCFILE%"
            ]
        }
    ],
    "[latex]": {
        "editor.fontFamily": "'Roboto'",
    },
    "shellformat.effectLanguages": [
        "shellscript",
    ],
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "explorer.confirmDragAndDrop": false,
    "latex-workshop.texcount.autorun": "onSave",
    "cSpell.enableFiletypes": [
        "latex"
    ],
    "projectManager.git.baseFolders": [
        "~/repository"
    ],
    "projectManager.git.maxDepthRecursion": 2,
}