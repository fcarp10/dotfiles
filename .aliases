## ls ##
alias ls='ls --color=auto'
alias ll='ls -la'
alias l.='ls -d .* --color=auto'

## cd ##
alias dl="cd ~/Downloads"
alias rp="cd ~/repository"
alias ..='cd ..'
alias ...='cd ../../../'
alias ....='cd ../../../../'
alias .....='cd ../../../../'
alias .4='cd ../../../../'
alias .5='cd ../../../../..'

## web apps ##
alias wt='function _wt(){ curl wttr.in/$1; };_wt'
alias pubip="curl ifconfig.co/json"
alias cheat='function _cheat(){ curl cheat.sh/$1; };_cheat'
alias cryp='function _cryp(){ curl rate.sx/$1; };_cryp'

## config ##
alias config='/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'

## ssh ##
alias rpi='ssh ubuntu@192.168.50.233'
alias rpi-shutdown='ssh ubuntu@192.168.50.233 "sudo shutdown now"'
alias laptop='ssh goku@192.168.100.10'
alias office='ssh vegeta@192.168.100.11'
alias xps='ssh vegito@192.168.100.12'

## battery dell ##
alias bat-standard='sudo cctk --PrimaryBattChargeCfg=Standard'
alias bat-express='sudo cctk --PrimaryBattChargeCfg=Express'
alias bat-primacuse='sudo cctk --PrimaryBattChargeCfg=PrimAcUse'
alias bat-adaptive='sudo cctk --PrimaryBattChargeCfg=Adaptive'
alias bat-custom='sudo cctk --PrimaryBattChargeCfg=Custom:60-75'

## pacman ##
alias rm-orphans='sudo pacman -Qtdq | sudo pacman -Rns -'
alias mirror="sudo reflector -f 30 -l 30 --number 10 --verbose --save /etc/pacman.d/mirrorlist"
alias find-pacman='function _find-pacman(){ pacman -Qi | grep Name | grep $1;};_find-pacman'
alias history-installed='grep -i installed /var/log/pacman.log'
alias history-upgraded='grep -i upgraded /var/log/pacman.log'

## sway ##
alias list-appids='swaymsg -t get_tree | grep "app_id"'

## docker ##
alias docker-rm-cts='docker stop $(docker ps -a -q) && docker rm $(docker ps -a -q)'
alias docker-rm-imgs='docker rmi -f $(docker images -a -q)'

## others ##
alias please='sudo $(fc -ln -1)'
alias update-grub="sudo grub-mkconfig -o /boot/grub/grub.cfg"
